<form>
  <div class="form-group">
    <label for="postEmail">Email address</label>
    <input type="email" class="form-control" id="postEmail" placeholder="name@example.com">
  </div>
  <div class="form-group">
    <label for="textarea">Input Comment</label>
    <textarea class="form-control" id="textarea" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="postUsername">Username</label>
    <input type="text" class="form-control" id="postUsername" placeholder="username">
  </div>
  <button type="submit" class="btn btn-primary mb-2" id="postSubmit">Add Post</button>
</form>